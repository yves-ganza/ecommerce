extend header.pug

block content
	div(class="main")
		h4= product.name
		p Price: $#{product.price}
		p In stock: #{product.stock}
		a(href="/reviews/"+product._id)
			p Reviews
		form(class="review-form" action="")
			h5 Add a review
			div
				label(for="name") Enter your name: 
				input(type="text" name="reviewer" id="reviewer" required)
			div
				label(for="rating-input") Rating: 
				input(type="number" name="rating" min=1 max=10 required)

			button(type="submit") submit
			input(type="text" name="product_id" id="product_id" value=product._id hidden)